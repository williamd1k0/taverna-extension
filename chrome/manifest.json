{
  "manifest_version": 2,

  "name": "Querida Taverninha",
  "description": "Extens√£o da Taverna do Cogu para Google Chrome",
  "version": "0.6",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["jquery.min.js","mythFB.js"],
      "css":["fb.css"]
    }
  ]
}
